<%= form_with(model: @user, local: true, url: signup_path) do |f| %>
  <%= render 'shared/errors', obj: @user %>

  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, id: :user_name, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :emal %>
    <%= f.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, id: :user_password, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control' %>
  </div>

  <%= f.submit 'Create Account', class: 'btn btn-primary' %>
<% end %>
