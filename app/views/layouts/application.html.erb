<!DOCTYPE html>
<html>
  <head>
    <title>TicketTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="container">
      <ul class="nav justify-content-end">
          <% if current_user %>
          <li class="nav-item">
            <a href='' class='nav-link disabled'>Signed in as <%= current_user.name %></a>
          </li>
          <li class="nav-item">
            <%= link_to "Logout", '/logout', class: 'nav-link' %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to 'Log in', '/login', class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Signup', 'signup', class: 'nav-link' %>
          </li>
          <% end %>
        </li>
      </ul>

      <ul class="nav">
        <li class="nav-item"><strong class="nav-link">Ticketing</strong></li>
        <li class="nav-item">
          <%= link_to "Projects", projects_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Tickets", tickets_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Tags", tags_path, class: 'nav-link' %>
        </li>
      </ul>

      <%= yield %>
    </section>
  </body>
</html>
