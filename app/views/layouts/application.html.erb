<!DOCTYPE html>
<html>
  <head>
    <title>TicketTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="container">
      <ul class="nav justify-content-end">
        <li class="nav-item"><%= link_to 'Log in', '', class: 'nav-link' %>
      </ul>

      <ul class="nav">
        <li class="nav-item"><strong class="nav-link">Ticketing</strong></li>
        <li class="nav-item">
          <%= link_to "Projects", projects_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Tickets", tickets_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Tags", tags_path, class: 'nav-link' %>
        </li>
      </ul>

      <%= yield %>
    </section>
  </body>
</html>
